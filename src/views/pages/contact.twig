{% extends "layouts.master" %}

{% block title %}Contact Us - {{ store.name|default('MOBEX AUTO PARTS') }}{% endblock %}

{% block content %}
    <!-- Page Title -->
    <section class="page-title-section">
        <div class="container">
            <h1>Contact Us</h1>
            <nav class="breadcrumbs">
                <a href="{{ page('index') }}">Home</a> / <span>Contact Us</span>
            </nav>
        </div>
    </section>

    <!-- Contact Content -->
    <section class="contact-section">
        <div class="container">
            <div class="contact-layout">
                <div class="contact-info">
                    <h2>Get in Touch</h2>
                    <p>Have questions or need assistance? We're here to help! Reach out to us through any of the following methods.</p>
                    
                    <div class="contact-details">
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <h3>Address</h3>
                                <p>{% if store.contacts.address %}{{ store.contacts.address }}{% else %}7031 N 35th Ave<br>Phoenix, Arkansas<br>United States{% endif %}</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <h3>Phone</h3>
                                <p>Call us between 8 AM - 10 PM</p>
                                <p><strong>{% if store.contacts.mobile %}{{ store.contacts.mobile }}{% else %}6668 5555 8464{% endif %}</strong></p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h3>Email</h3>
                                <p>{% if store.contacts.email %}{{ store.contacts.email }}{% else %}info@mobex.com{% endif %}</p>
                                <p>{% if store.contacts.support_email %}{{ store.contacts.support_email }}{% else %}support@mobex.com{% endif %}</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-headset"></i>
                            <div>
                                <h3>Live Chat</h3>
                                <p>Available 24/7</p>
                                <a href="#" class="chat-link">Chat with an Expert</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="contact-form-wrapper">
                    <h2>Send us a Message</h2>
                    <form class="contact-form" id="contactForm" onsubmit="submitContactForm(event)">
                        <div class="form-row">
                            <div class="form-group">
                                <label>First Name *</label>
                                <input type="text" name="first_name" required>
                            </div>
                            <div class="form-group">
                                <label>Last Name *</label>
                                <input type="text" name="last_name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email Address *</label>
                            <input type="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" name="phone">
                        </div>
                        <div class="form-group">
                            <label>Subject *</label>
                            <input type="text" name="subject" required>
                        </div>
                        <div class="form-group">
                            <label>Message *</label>
                            <textarea name="message" rows="6" required></textarea>
                        </div>
                        <button type="submit" class="submit-btn">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="{{ 'shared.js'|asset }}"></script>
    <script src="{{ 'contact.js'|asset }}"></script>
    <script>
        function submitContactForm(event) {
            event.preventDefault();
            // Implement contact form submission
            // This can be integrated with Salla's contact form API if available
            alert('Thank you for your message! We will get back to you soon.');
            event.target.reset();
        }
    </script>
{% endblock %}
