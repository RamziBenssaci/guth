{% extends "layouts.master" %}

{% block title %}Shopping Cart - {{ store.name|default('MOBEX AUTO PARTS') }}{% endblock %}

{% block content %}
    <!-- Page Title -->
    <section class="page-title-section">
        <div class="container">
            <h1>Shopping Cart</h1>
            <nav class="breadcrumbs">
                <a href="{{ page('index') }}">Home</a> / <span>Cart</span>
            </nav>
        </div>
    </section>

    <!-- Cart Content -->
    <section class="cart-section">
        <div class="container">
            <div class="cart-layout">
                <div class="cart-main">
                    <div class="cart-table-wrapper">
                        <table class="cart-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="cart-items">
                                {% if cart.items|length > 0 %}
                                    {% for item in cart.items %}
                                        <tr class="cart-item-row">
                                            <td class="product-cell">
                                                <div class="cart-product">
                                                    <a href="{{ item.url }}">
                                                        <img src="{{ item.product_image|default('images/placeholder.png'|asset) }}" alt="{{ item.product_name }}">
                                                    </a>
                                                    <div class="product-details">
                                                        <h3><a href="{{ item.url }}">{{ item.product_name }}</a></h3>
                                                        {% if item.sku %}<p class="product-sku">SKU: {{ item.sku }}</p>{% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="price-cell">
                                                <span class="item-price">{{ item.price|money }}</span>
                                                {% if item.offer and item.product_price %}
                                                    <span class="item-regular-price">{{ item.product_price|money }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="quantity-cell">
                                                <div class="quantity-controls">
                                                    <button type="button" class="qty-btn minus" onclick="updateCartQuantity({{ item.id }}, {{ item.quantity - 1 }})">-</button>
                                                    <input type="number" value="{{ item.quantity }}" min="1" {% if item.max_quantity %}max="{{ item.max_quantity }}"{% endif %} class="quantity-input" onchange="updateCartQuantity({{ item.id }}, this.value)">
                                                    <button type="button" class="qty-btn plus" onclick="updateCartQuantity({{ item.id }}, {{ item.quantity + 1 }})">+</button>
                                                </div>
                                            </td>
                                            <td class="subtotal-cell">
                                                <span class="item-subtotal">{{ item.total|money }}</span>
                                            </td>
                                            <td class="remove-cell">
                                                <button type="button" class="remove-item-btn" onclick="removeCartItem({{ item.id }})">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr class="cart-empty">
                                        <td colspan="5">
                                            <div class="empty-cart">
                                                <i class="fas fa-shopping-cart"></i>
                                                <p>Your cart is empty</p>
                                                <a href="{{ page('products') }}" class="continue-shopping-btn">Continue Shopping</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>

                    <div class="cart-actions">
                        <a href="{{ page('products') }}" class="continue-shopping-link"><i class="fas fa-arrow-left"></i> Continue Shopping</a>
                        {% if cart.items|length > 0 %}
                            <button class="update-cart-btn" onclick="updateCart()">Update Cart</button>
                            <button class="clear-cart-btn" onclick="clearCart()">Clear Cart</button>
                        {% endif %}
                    </div>
                </div>

                <aside class="cart-sidebar">
                    <div class="cart-summary">
                        <h3>Cart Totals</h3>
                        <div class="summary-row">
                            <span>Subtotal</span>
                            <span class="subtotal">{% if cart %}{{ cart.sub_total|money }}{% else %}$0.00{% endif %}</span>
                        </div>
                        <div class="summary-row">
                            <span>Shipping</span>
                            <span class="shipping">
                                {% if cart and cart.real_shipping_cost %}
                                    {% if cart.real_shipping_cost == 0 %}
                                        Free
                                    {% else %}
                                        {{ cart.real_shipping_cost|money }}
                                    {% endif %}
                                {% else %}
                                    Free
                                {% endif %}
                            </span>
                        </div>
                        {% if cart and cart.discount > 0 %}
                            <div class="summary-row">
                                <span>Discount</span>
                                <span class="discount">-{{ cart.discount|money }}</span>
                            </div>
                        {% endif %}
                        {% if cart and cart.tax_amount > 0 %}
                            <div class="summary-row">
                                <span>Tax</span>
                                <span class="tax">{{ cart.tax_amount|money }}</span>
                            </div>
                        {% endif %}
                        <div class="summary-row total">
                            <span>Total</span>
                            <span class="total-amount">{% if cart %}{{ cart.total|money }}{% else %}$0.00{% endif %}</span>
                        </div>
                        {% if cart.items|length > 0 %}
                            <a href="{{ page('checkout') }}" class="checkout-btn">Proceed to Checkout</a>
                        {% else %}
                            <a href="{{ page('products') }}" class="checkout-btn">Continue Shopping</a>
                        {% endif %}
                    </div>

                    <div class="coupon-section">
                        <h3>Have a coupon?</h3>
                        <form class="coupon-form" onsubmit="applyCoupon(event)">
                            <input type="text" name="coupon_code" placeholder="Coupon code" required>
                            <button type="submit">Apply Coupon</button>
                        </form>
                        {% if cart and cart.coupon %}
                            <p class="coupon-applied">Coupon: {{ cart.coupon }} applied</p>
                        {% endif %}
                    </div>
                </aside>
            </div>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="{{ 'shared.js'|asset }}"></script>
    <script src="{{ 'cart.js'|asset }}"></script>
    <script>
        function updateCartQuantity(itemId, quantity) {
            if (quantity < 1) {
                removeCartItem(itemId);
                return;
            }
            // Use Salla API to update cart item
            if (typeof salla !== 'undefined' && salla.cart) {
                salla.cart.updateItem(itemId, { quantity: parseInt(quantity) });
            }
        }

        function removeCartItem(itemId) {
            // Use Salla API to remove cart item
            if (typeof salla !== 'undefined' && salla.cart) {
                salla.cart.removeItem(itemId);
            }
        }

        function updateCart() {
            // Reload page to reflect cart changes
            window.location.reload();
        }

        function clearCart() {
            if (confirm('Are you sure you want to clear your cart?')) {
                // Use Salla API to clear cart
                if (typeof salla !== 'undefined' && salla.cart) {
                    salla.cart.clear();
                }
            }
        }

        function applyCoupon(event) {
            event.preventDefault();
            const couponCode = event.target.coupon_code.value;
            // Use Salla API to apply coupon
            if (typeof salla !== 'undefined' && salla.cart) {
                salla.cart.applyCoupon(couponCode);
            }
        }
    </script>
{% endblock %}
